@using Nop.Core.Infrastructure
@using Nop.Web.Framework.Themes
@using Nop.Web.Framework.UI
@{
    var currentThemeName = EngineContext.Current.Resolve<IThemeContext>().WorkingThemeName;

    Html.AppendCssFileParts(String.Format("~/Themes/{0}/Content/css/style.css", currentThemeName));
    Html.AppendCssFileParts(String.Format("~/Themes/{0}/Content/css/owl.carousel.css", currentThemeName));
    Html.AppendCssFileParts(String.Format("~/Themes/{0}/Content/css/owl.theme.css", currentThemeName));
}